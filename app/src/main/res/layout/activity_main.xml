<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/seekbar_One"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:max="6"
        android:progress="1"
        app:layout_constraintStart_toEndOf="@+id/text_Bar"
        app:layout_constraintTop_toTopOf="@+id/text_Bar" />

    <TextView
        android:id="@+id/text_Bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Try some moves!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <WebView
        android:id="@+id/webView_One"
        android:layout_width="409dp"
        android:layout_height="605dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/seekbar_One"
        app:layout_constraintTop_toBottomOf="@+id/text_Bar" />

</androidx.constraintlayout.widget.ConstraintLayout>